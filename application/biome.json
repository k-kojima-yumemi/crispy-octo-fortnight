{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "include": ["./app/**/*.ts", "./app/**/*.tsx", "./vite.config.ts"],
    "ignore": ["./app/global.d.ts"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {},
      "suspicious": {
        "noReactSpecificProps": {
          "fix": "unsafe",
          "level": "error"
        }
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 4
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  }
}
